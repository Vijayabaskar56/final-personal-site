---
import BaseHead from "@/components/BaseHead.astro";
import Footer from "@/components/layout/Footer.astro";
import Header from "@/components/layout/Header.astro";
import SkipLink from "@/components/SkipLink.astro";
import ThemeProvider from "@/components/ThemeProvider.astro";
import { siteConfig } from "@/site.config";
import type { SiteMeta } from "@/types";

interface Props {
	meta: SiteMeta;
}

const {
	meta: { articleDate, description = siteConfig.description, ogImage, title },
} = Astro.props;
---

<html class="scroll-smooth" lang={siteConfig.lang}>
	<head>
		<BaseHead
			articleDate={articleDate}
			description={description}
			ogImage={ogImage}
			title={title}
		/>
		<script is:inline>
			// Blocking script to prevent layout shift - runs before body renders
			(function () {
				try {
					const stored = localStorage.getItem("layout-expanded");
					if (stored === "true") {
						// Set CSS custom property on html element for immediate styling
						document.documentElement.style.setProperty(
							"--layout-max-width",
							"72rem",
						);
						document.documentElement.classList.add("layout-expanded");
						document.documentElement.setAttribute(
							"data-layout-expanded",
							"true",
						);
					} else {
						document.documentElement.style.setProperty(
							"--layout-max-width",
							"48rem",
						);
					}
				} catch (e) {
					// localStorage might not be available in some contexts
					document.documentElement.style.setProperty(
						"--layout-max-width",
						"48rem",
					);
				}
			})();
		</script>
		<style is:inline>
			/* Apply expanded styles immediately using CSS variable */
			body {
				max-width: var(--layout-max-width, 48rem) !important;
			}
		</style>
	</head>
	<body
		class="bg-global-bg text-global-text mx-auto flex min-h-screen max-w-3xl flex-col px-4 pt-16 font-mono text-sm font-normal antialiased sm:px-8"
		id="layout-body"
	>
		<ThemeProvider />
		<SkipLink />
		<Header />
		<main id="main">
			<slot />
		</main>
		<Footer />
		<script is:inline type="speculationrules">
			{
				"prefetch": [
					{
						"where": {
							"href_matches": "/*"
						},
						"eagerness": "immediate"
					}
				],
				"prerender": [
					{
						"where": {
							"href_matches": "/*"
						},
						"eagerness": "moderate"
					}
				]
			}
		</script>
		<script>
			// Initialize layout state on page load (sync with head script)
			if (typeof window !== "undefined") {
				const STORAGE_KEY = "layout-expanded";
				const isExpanded =
					document.documentElement.getAttribute("data-layout-expanded") ===
					"true";

				if (isExpanded) {
					document.body.classList.add("layout-expanded");
					document.body.classList.remove("max-w-3xl");
					document.body.classList.add("max-w-6xl");
				} else {
					// Fallback: check localStorage if attribute not set
					const stored = localStorage.getItem(STORAGE_KEY);
					if (stored === "true") {
						document.body.classList.add("layout-expanded");
						document.body.classList.remove("max-w-3xl");
						document.body.classList.add("max-w-6xl");
					}
				}
			}
		</script>
	</body>
</html>
